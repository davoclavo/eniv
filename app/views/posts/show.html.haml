%meta{:content => "width=device-width, minimum-scale=1.0, maximum-scale=1.0", :name => "viewport"}
%body.share-page
  .card
    .video-container
      .overlay{:style => "z-index: 2; position: absolute;top: 0; height: 100%; width: 100%;"}
      %a.mute-button.off{:href => "#"}
      %video#post.video-js.vjs-default-skin{:autobuffer => "", :loop => "", :poster => @post.thumbnail_url, :preload => "auto", "x-webkit-airplay" => "allow"}
        %source{:src => @post.reversed_video_url || @post.video_url, :type => "video/mp4"}
    .info
      .user
        %img.avatar{:src => @post.user.avatar_url}
          %h2= @post.user.username
      %h1
        .inner
          %p= @post.description
          - if @post.reversed_video_url.nil?
            %h2 Enivizing...
      .shot-with-vine
        %img{:height => "30", :src => "https://d3422saexnbpnl.cloudfront.net/static/images/shot_with_vine.png", :width => "171"}
          %a.action-button{:href => "https://get.vine.co"} Download App
